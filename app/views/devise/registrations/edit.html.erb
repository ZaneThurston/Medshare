<div class="main">
  <h2>Editar conta <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, label: "Nova senha", autocomplete: "off", hint: "deixe o campo em branco se não quiser alterar", required: false %>
      <%= f.input :password_confirmation, label: "Confirme sua senha", required: false %>
      <%= f.input :current_password, label: "Senha atual", hint: "precisamos de sua senha atual para confirmar as alterações", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Atualizar" %>
    </div>
    
    <div>
      <h3>Cancelar minha conta</h3>
      <%= button_to "Clique aqui para cancelar :(", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %>
    </div>
    
    <div>
      <%= link_to "Voltar", :back %>
    </div>  
  <% end %>
</div>

