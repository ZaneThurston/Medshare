<div class="main">
  <h2>Registrar</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, label: "Email", required: true, autofocus: true %>
      <%= f.input :password, label: "Senha", required: true, hint: ("Mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: "Confirme a senha", required: true %>
      <%= f.input :name, label: "Nome", required: true, autofocus: true %>
      <%= f.input :address, label: "Endereço", required: false, autofocus: true %> 
      <%= f.input :postalCode, label: "CEP", required: false, autofocus: true %>
      <%= f.input :number, label: "Número", required: false, autofocus: true %>
      <%= f.input :phone, label: "Telefone (com DDD)",  required: true, autofocus: true %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Registrar" %>
    </div>
  <% end %>

</div>
<div class="render">
  <%= render "devise/shared/links" %>
</div>